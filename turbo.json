{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "postinstall": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "dist/**", "build/**", "!**/.next/cache/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "**/junit.xml"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
